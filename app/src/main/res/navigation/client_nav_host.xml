<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/client_nav_host"
    app:startDestination="@id/home_menu">

    <fragment
        android:id="@+id/home_menu"
        android:name="com.mdinterior.mdinterior.presentation.fragment.client.HomeFragment"
        android:label="Hello name,"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_menu_to_projectsFragment"
            app:destination="@id/projectsFragment" />
    </fragment>
    <fragment
        android:id="@+id/services_menu"
        android:name="com.mdinterior.mdinterior.presentation.fragment.client.ServicesFragment"
        android:label="Services"
        tools:layout="@layout/fragment_services" />
    <fragment
        android:id="@+id/projectsFragment"
        android:name="com.mdinterior.mdinterior.presentation.fragment.client.ProjectsFragment"
        android:label="Projects"
        tools:layout="@layout/fragment_projects" />
    <fragment
        android:id="@+id/info_menu"
        android:name="com.mdinterior.mdinterior.presentation.fragment.client.InfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_info" />
</navigation>